{
  "manifest_version": 3,
  "name": "Color Picker",
  "description": "Easily select and manage colors.",
  "version": "1.0.1",
  "action": {
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "icons": {
    "16": "./icons/icon16.png",
    "48": "./icons/icon48.png",
    "128": "./icons/icon128.png"
  },
  "permissions": [
    "storage",
    "notifications"
  ]
}
