{
  "manifest_version": 3,
  "name": "Color Picker",
  "version": "1.0",
  "description": "Pick colors from any part of the screen.",
  "permissions": [
    "activeTab",
    "scripting",
    "tabs",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/color-picker-16.png",
      "48": "icons/color-picker-48.png",
      "128": "icons/color-picker-128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icons/color-picker-16.png",
    "48": "icons/color-picker-48.png",
    "128": "icons/color-picker-128.png"
  }
}
